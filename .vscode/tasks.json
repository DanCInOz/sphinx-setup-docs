    "version": "2.0.0",
    "tasks": [
        {
            "label": "docker-build-html",
            "type": "shell",
            "command": "docker run --entrypoint docker/add-requirements.sh -it --rm -v ${workspaceFolder}/docs:/docs sphinxdoc/sphinx make html",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "docker-sphinx-quickstart",
            "type": "shell",
            "command": "docker run -it --rm -v ${workspaceFolder}/docs:/docs sphinxdoc/sphinx sphinx-quickstart",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "docker run -it --rm -v ${workspaceFolder}/docs:/docs sphinxdoc/sphinx make clean",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "docker-build-pdf",
            "type": "shell",
            "command": "docker run --entrypoint docker/add-requirements.sh -it --rm -v ${workspaceFolder}/docs:/docs sphinxdoc/sphinx-latexpdf make latexpdf",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "local-build-html",
            "type": "shell",
            "command": "source ./.env/bin/activate; cd docs && make html",
            "windows": {
                "command": ".env\\Scripts\\Activate.ps1; .\\docs\\make.bat html"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "local-build-singlehtml",
            "type": "shell",
            "command": "source ./.env/bin/activate; cd docs && make singlehtml",
            "windows": {
                "command": ".env\\Scripts\\Activate.ps1; .\\docs\\make.bat singlehtml"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}